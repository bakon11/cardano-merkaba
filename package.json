{
  "name": "cardano-merkaba",
  "version": "0.3npm ins.0",
  "description": "A tool to give you full access to the Cardano Network.",
  "main": "./out/main/index.js",
  "author": "bakon",
  "homepage": "https://github.com/bakon11/cardano-merkaba",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:linux": "rm -rf node_modules/.vite && rm -rf node_modules/@harmoniclabs/buildooor/dist && cp -a /media/bakon/data/Dev/HarmonicLabs/pluts_dev/buildooor/dist node_modules/@harmoniclabs/buildooor/ && electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "electron-vite build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/space-grotesk": "^5.1.0",
    "@harmoniclabs/buildooor": "^0.1.0",
    "@harmoniclabs/plu-ts": "^0.9.0",
    "@mui/icons-material": "^6.2.1",
    "@mui/joy": "^5.0.0-beta.51",
    "@mui/material": "^6.2.1",
    "bip38": "^3.1.1",
    "bip39": "^3.1.0",
    "cbor-x": "^1.6.0",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.1.7",
    "knex": "^3.1.0",
    "recharts": "^2.15.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "websocket": "^1.0.35"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.2",
    "reusable": "^1.1.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-node-polyfills": "^0.22.0"
  }
}
